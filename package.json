{
  "publisher": "PengBoUESTC",
  "name": "vscode-dot-preview",
  "displayName": "vscode-dot-preview",
  "version": "0.0.7",
  "private": true,
  "packageManager": "pnpm@8.10.5",
  "description": "",
  "author": "PengBoUESTC",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/PengBoUESTC/vscode-dot-preview.git"
  },
  "categories": [
    "Other"
  ],
  "main": "./dist/index.js",
  "icon": "images/logo.png",
  "files": [
    "dist"
  ],
  "engines": {
    "vscode": "^1.70.0"
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "contributes": {
    "capabilities": {
      "hoverProvider": "true"
    },
    "configuration": {
      "type": "object",
      "title": "dot env preview",
      "properties": {
        "dotpreview.prefix": {
          "type": "array",
          "description": "dot env files prefix list.",
          "default": []
        },
        "dotpreview.env": {
          "type": "array",
          "description": "dot env files suffix list.",
          "default": []
        },
        "dotpreview.scanExclude": {
          "type": "array",
          "description": "will skip these files/dirs when scan project dir.",
          "default": []
        }
      }
    }
  },
  "scripts": {
    "build": "rollup --config rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "dev": "nr build --watch",
    "lint": "eslint .",
    "vscode:prepublish": "nr build",
    "publish": "vsce publish --no-dependencies",
    "pack": "vsce package --no-dependencies",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "release": "bumpp && nr publish"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "dotenv-expand": "^11.0.6",
    "ignore": "^5.3.1"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^1.1.1",
    "@antfu/ni": "^0.21.9",
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/node": "^20.9.0",
    "@types/vscode": "^1.70.0",
    "@vscode/vsce": "^2.22.0",
    "bumpp": "^9.2.0",
    "eslint": "^8.53.0",
    "esno": "^4.0.0",
    "pnpm": "^8.10.5",
    "rimraf": "^5.0.5",
    "rollup": "^4.16.1",
    "rollup-plugin-clear": "^2.0.7",
    "tslib": "^2.6.2",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitest": "^0.34.6"
  }
}
